<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
    <title>FV-man: {% block title %}{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>
    {% endblock %}
</head>
{% block main %}
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

    <a class="navbar-brand" href="{{ path('index') }}">
        <img src="\data\Books-illustration-on-transparent-background-PNG.png" alt="FV-man" width="50" height="50">
    </a>
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('index') }}">FV-man Nawigacja:</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link  {% if app.request.get('_route') == 'index' %}active{% endif %}"
                       href="{{ path('index') }}">Strona Główna</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_invoice_list_conroller' %}active{% endif %}"
                           href="{{ path('app_invoice_list_conroller') }}">Lista Faktur</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Lista Produktów</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_clients' %}active{% endif %}"
                           href="{{ path('app_clients') }}">Lista Klientów</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}" tabindex="-1"
                           aria-disabled="true">wyloguj</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_login' %}active{% endif %}"
                           href="{{ path('app_login') }}" tabindex="-1" aria-disabled="true">zaloguj</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.get('_route') == 'app_register' %}active{% endif %}"
                           href="{{ path('app_register') }}" tabindex="-1" aria-disabled="true">zarejestruj</a>
                    </li>
                {% endif %}
                {% if app.debug() %}
                    <li class="nav-item">
                        <h3>
                            <span class="badge bg-warning text-dark">Uwaga Tryb debugowania włączony!</span>
                        </h3>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% endblock %}
{% block body %}{% endblock %}
<footer>
</footer>
</body>
</html>
